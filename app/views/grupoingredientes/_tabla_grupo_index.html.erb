<div class="row">
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @grupoingredientes.each do |grupoingrediente| %>
        <tr>
          <td><%= grupoingrediente.nombre %></td>
          <td><%= link_to 'Mostrar',
             grupoingrediente,
             class: "btn btn-sm btn-primary text-white" %></td>
          <td><%= link_to 'Editar',
             edit_grupoingrediente_path(grupoingrediente),
              class: "btn btn-sm btn-warning text-white"%></td>
          <td><%= link_to 'Eliminar',
             grupoingrediente,
             class: "btn btn-sm btn-danger text-white",
             method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
