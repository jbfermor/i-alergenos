  <strong>Telefono:</strong>
  <%= @cliente.telefono %>
</p>

<table>
    <tr>
      <th>Lista de menus:</th>
    </tr>
    <% if @lista_menus.empty? %>
      <tr>
        <td>No hay ningún menú creado todavía</td>
      </tr>
    <% else %>
    <%= @lista_menus.each do |menu| %>
      <tr>
        <td>
          <%= menu.nombre %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>


