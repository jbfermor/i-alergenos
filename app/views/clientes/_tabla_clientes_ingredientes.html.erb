<div class="row">
    <table>
      <thead>
        <tr>
          <th colspan="3">Lista de ingredientes creados por el cliente:</th>
        </tr>
      </thead>
      <tbody>
        <% if @lista_ingredientes.empty? %>
          <tr>
            <td colspan="3">No hay ningún ingrediente creado todavía</td>
          </tr>
        <% else %>
          <% @lista_ingredientes.each do |ingrediente| %>
            <tr>
              <td class= "text-start" colspan="2">
                <%= ingrediente.nombre %>
              </td>
              <td>
                <%= link_to "Mostrar", ingrediente_path(ingrediente.id),
                 class: "btn btn-sm btn-primary text-white"%>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
</div>
