<div class="container">
  <div class="row">
    <h1>Menus</h1>

    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Cliente</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @menus.each do |menu| %>
          <tr>
            <td><%= menu.nombre %></td>
            <td><%= menu.cliente.nombre %></td>
            <td><%= link_to 'Mostrar', menu,
              class: "btn btn-sm btn-primary text-white" %></td>
            <td><%= link_to 'Editar', edit_menu_path(menu.id),
              class: "btn btn-sm btn-warning text-white" %></td>
            <td><%= link_to 'Eliminar', menu, method: :delete,
              class: "btn btn-sm btn-danger text-white",
              data: { confirm: 'Â¿Seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to 'Nuevo Menu', new_menu_path,
     class: "btn btn-success text-white" %>
  </div>

</div>
