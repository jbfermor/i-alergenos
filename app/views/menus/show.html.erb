<div class="row">
  <div class="col-12">
    <h1><%= @menu.nombre %></h1>
  </div>
  <div class="col-12">
    <%= link_to 'Edit', edit_menu_path(@menu) %> |
    <%= link_to 'Back', menus_path %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <%= render "menus/table_platos_menu" %>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
     data-bs-target="#add_platos" aria-expanded="false"
      aria-controls="add_platos">
      Añadir platos al menú
    </button>
  </div>
  <div class="col-12">
    <div class="collapse" id="add_platos">
      <div class="card card-body">
        <%= render "menus/add_platos" %>
      </div>
    </div>
  </div>
</div>
