<div class="container">

  <div class="row">
    <h1><%= @menu.nombre %></h1>
  </div>

  <div class="row">
        <%= link_to "Editar #{@menu.nombre}", edit_menu_path(@menu), class: "btn btn-warning text-white" %>
  </div>

  <% if current_cliente.admin? %>
    <%= render "menus/table_platos_menu_admin" %>
  <% else %>
    <%= render "menus/table_platos_menu_usuario" %>
  <% end %>

  <div class="row">
    <button class="btn btn-success" type="button" data-bs-toggle="collapse"
     data-bs-target="#informe_menu" aria-expanded="false"
      aria-controls="informe_menu">
      Imprimir informe de alérgenos
    </button>
  </div>
  <div class="collapse" id="informe_menu">
    <div class="row text-center border border-success p-3">
      <div class="col-4">
        <%= link_to "Con imágenes", menu_to_pdf_images_path(menu_id: @menu,
         format: "pdf"), class: "btn btn-secondary text-white" %>
      </div>
      <div class="col-4">
        <%= link_to "Con texto", menu_to_pdf_text_path(menu_id: @menu,
         format: "pdf"), class: "btn btn-secondary text-white" %>
      </div>
      <div class="col-4">
        <%= link_to "Con leyenda", menu_to_pdf_leyenda_path(menu_id: @menu,
         format: "pdf"), class: "btn btn-secondary text-white" %>
      </div>
    </div>
  </div>

  <% if current_cliente.admin? %>
  <div class="row">
      <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
       data-bs-target="#add_platos_admin" aria-expanded="false"
        aria-controls="add_platos_admin">
        Añadir platos
      </button>
  </div>

  <div class="row">
    <div class="collapse" id="add_platos_admin">
      <div class="card">
        <div class="card-body">
          <%= render "menus/add_platos_admin" %>
        </div>
      </div>
    </div>
  </div>
  <% else %>
  <div class="row">
      <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
       data-bs-target="#add_platos_usuario" aria-expanded="false"
        aria-controls="add_platos_usuario">
        Añadir platos
      </button>
  </div>

  <div class="row">
    <div class="collapse" id="add_platos_usuario">
      <div class="card">
        <div class="card-body">
          <%= render "menus/add_platos_usuario" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>


  <div class="row">
    <%= link_to 'Atrás', menus_path, class: "btn btn-danger text-white" %>
  </div>

</div>
