<div class="container d-grid gap-3">
  <div class="row">
      <h1> <%= @plato.nombre %> </h1>
  </div>

  <div class="row">
    <%= link_to "Editar nombre", edit_plato_path(@plato),
     class: "btn btn-warning text-white" %>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <td colspan="3">Alérgenos de este plato</td>
        </tr>
      </thead>
      <tbody>
        <% @plato.alergenos.each do |a| %>
          <tr>
            <td><%= a.nombre %></td>
            <td><img src="<%= asset_path "#{a.img}" %>" alt="" width="50px"></td>
            <td><%= link_to "Mostrar", menu_path(a.id),
            class: "btn btn-sm btn-primary text-white" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= render "platos/table_ingredientes_plato" %>

  <div class="row">
      <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
       data-bs-target="#add_ingredientes" aria-expanded="false"
        aria-controls="add_ingredientes">
        Añadir ingredientes al plato
      </button>
  </div>

  <div class="row">
    <div class="collapse" id="add_ingredientes">
      <div class="card">
        <div class="card-body">
          <%= render "platos/add_ingrediente" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <th colspan="2"> Menús con este plato</th>
        </tr>
      </thead>
      <tbody>
        <% @plato.menus.each do |m| %>
          <tr>
            <td><%= m.nombre %></td>
            <td><%= link_to "Mostrar", menu_path(m.id),
            class: "btn btn-sm btn-primary text-white" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to 'Atrás', platos_path, class: "btn btn-danger text-white" %>
  </div>

</div>
