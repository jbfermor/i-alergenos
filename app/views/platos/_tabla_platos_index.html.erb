<div class="row">
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3">Acciones</th>
          <th>Alérgenos</th>
        </tr>
      </thead>

      <tbody>
        <% @platos.each do |plato| %>
          <tr>
            <td><%= plato.nombre %></td>
            <td><%= link_to 'Mostrar', plato,
              class: "btn btn-sm btn-primary text-white" %></td>
            <td><%= link_to 'Editar', edit_plato_path(plato),
              class: "btn btn-sm btn-warning text-white" %></td>
            <td><%= link_to 'Eliminar', plato, method: :delete,
              class: "btn btn-sm btn-danger text-white",
               data: { confirm: '¿Seguro?' } %></td>
            <td>
              <% plato.alergenos.each do |a| %>
                <img src="<%= asset_path "#{a.img}" %>" alt="" width="40">
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
