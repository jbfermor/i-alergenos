
<h1>Alergenos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Imagen</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @alergenos.each do |alergeno| %>
      <tr>
        <td><%= alergeno.nombre %></td>
        <td> <img src="<%= asset_path "#{alergeno.img}" %>" alt="" width="50px"></td>
        <td><%= link_to 'Mostrar', alergeno, class: "btn btn-success text-white" %></td>
        <td><%= link_to 'Editar', edit_alergeno_path(alergeno),
           class: "btn btn-warning text-white" %></td>
        <td><%= link_to 'Eliminar', alergeno, method: :delete,
           data: { confirm: 'Â¿Seguro?' },
           class: "btn btn-danger text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Alergeno', new_alergeno_path, class: "btn btn-success text-white" %>
