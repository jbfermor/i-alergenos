<div class="container text-center p-3">
  <div class="row">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Entrar",
       new_session_path(resource_name), class: "btn btn-success text-white" %><br />
    <% end %>
  </div>
  <div class="row">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Registrarse",
       new_registration_path(resource_name),
        class: "btn btn-warning text-white" %><br />
    <% end %>
  </div>
  <div class="row">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "¿Has olvidado la contraseña",
       new_password_path(resource_name),
        class: "btn btn-danger text-white" %><br />
    <% end %>

  </div>
  <div class="row">
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "¿No has recibido las instrucciones de confirmación?",
       new_confirmation_path(resource_name),
        class: "btn btn-warning text-white" %><br />
    <% end %>
  </div>
  <div class="row">
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "¿No has recibido las instrucciones para desbloquear la cuenta?",
       new_unlock_path(resource_name), class: "btn btn-warning text-white" %><br />
    <% end %>
  </div>
  <div class="row">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Entrar con #{OmniAuth::Utils.camelize(provider)}",
         omniauth_authorize_path(resource_name, provider),
         class: "btn btn-success text-white" %><br />
      <% end %>
    <% end %>
  </div>

</div>
