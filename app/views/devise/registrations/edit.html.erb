<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true,
     autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando confirmación para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "form-label" %>
    <i>(déjalo en blanco si no quieres cambiarlo)</i><br />
    <%= f.password_field :password,
     autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres al menos</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form-label" %><br />
    <%= f.password_field :password_confirmation,
     autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "form-label" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password,
     autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :nombre, class: "form-label" %>
    <%= f.text_field :nombre, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :cifNif, class: "form-label" %>
    <%= f.text_field :cifNif, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :direccion, class: "form-label" %>
    <%= f.text_field :direccion, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :localidad, class: "form-label" %>
    <%= f.text_field :localidad, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :cp, class: "form-label" %>
    <%= f.number_field :cp, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :provincia, class: "form-label" %>
    <%= f.text_field :provincia, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :telefono, class: "form-label" %>
    <%= f.number_field :telefono, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Editar", class: "btn btn-success" %>
  </div>
<% end %>

<h3>Cancelar cuenta</h3>

<p>¿No quieres seguir con nosotros? <%= button_to "Cancelar cuenta",
   registration_path(resource_name),
    data: { confirm: "¿Seguro?" }, method: :delete %></p>

<%= link_to "Atrás", :back %>
